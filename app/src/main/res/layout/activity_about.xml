<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    >
<com.example.enlogty.communicationassistant.customview.TitleBarLinearLayout
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    app:titleText="关于云助手"/>
    <ImageView
        android:id="@+id/about_picture"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#0791da"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_name"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/light_gray"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/license_label"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/light_gray"/>
    </LinearLayout>

    <TextView
        android:clickable="true"
        android:id="@+id/about_check"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:text="@string/check"
        android:textColor="@color/white"
        android:background="@drawable/textview_selector"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        />
    <TextView
        android:clickable="true"
        android:id="@+id/about_qq"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:text="@string/qq_number"
        android:textColor="@color/white"
        android:background="@drawable/textview_selector"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        />
    <TextView
        android:clickable="true"
        android:id="@+id/about_email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="18sp"
        android:text="@string/email"
        android:textColor="@color/white"
        android:background="@drawable/textview_selector"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        />
    <TextView
        android:clickable="true"
        android:id="@+id/about_agreement"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="20sp"
        android:text="@string/agreement"
        android:textColor="@color/white"
        android:background="@drawable/textview_selector"
        android:gravity="center" />
</LinearLayout>